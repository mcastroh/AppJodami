@model Jodami.AppWeb.Models.Dto.DtoVehiculos

<div class="modal fade" id="AddEntidad" aria-labelledby="AddEntidadLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">       
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title" id="AddEntidadLabel">Adicionar Vehículo</h2>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>          
            <div class="modal-body">
                <div class="modal-body">                                        
                    <form asp-action="Adicionar" method="post" class="needs-validation" novalidate>
                        <div class="row">
                            <div class="col-sm-6 form-group">
                                <label class="control-label">Placa</label>
                                <input asp-for="@Model.objVehiculos.Placa" class="form-control" autocomplete="off" required maxlength="40" />
                                <div class="invalid-feedback">Placa obligatorio</div>
                            </div>
                            <div class="col-sm-6 form-group">
                                <label class="control-label">Certificado</label>
                                <input asp-for="@Model.objVehiculos.Certificado" class="form-control" autocomplete="off" required maxlength="40" />
                                <div class="invalid-feedback">Certificado obligatorio</div>
                            </div>                            
                        </div>                      
                        <div class="row">                       
                            <div class="col-sm-5 form-group">
                                <label asp-for="@Model.objVehiculos.Marca" class="control-label"></label>
                                <input asp-for="@Model.objVehiculos.Marca" class="form-control" autocomplete="off" required maxlength="40" />                                
                                <div class="invalid-feedback">Marca obligatorio</div>
                            </div>
                            <div class="col-sm-5 form-group">
                                <label asp-for="@Model.objVehiculos.Modelo" class="control-label"></label>
                                <input asp-for="@Model.objVehiculos.Modelo" class="form-control" autocomplete="off" required maxlength="40" />
                                <div class="invalid-feedback">Modelo obligatorio</div>
                            </div>
                            <div class="col-sm-2 form-group">
                                <label asp-for="@Model.objVehiculos.Color" class="control-label">Color</label>
                                <input asp-for="@Model.objVehiculos.Color" class="form-control" autocomplete="off" required maxlength="40" />                                
                                <div class="invalid-feedback">Color obligatorio</div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-4 form-group">
                                <div class="form-group">
                                    <label asp-for="@Model.objVehiculos.PesoKg" class="control-label"></label>
                                    <input asp-for="@Model.objVehiculos.PesoKg" class="form-control" autocomplete="off" />                                   
                                </div>
                            </div>
                            <div class="col-md-4">
                                <label for="IdFlete" class="control-label">Tipo de Flete</label>
                                <select id="IdFlete" class="form-control" asp-for="@Model.objVehiculos.IdFlete" asp-items="@(new SelectList(@Model.listaTipoFlete, "IdFlete", "Codigo") ) ">
                                    <option value="">Seleccionar</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label for="cboEstado">Pertenece a JODAMI</label>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" asp-for="@Model.objVehiculos.EsDeEmpresa" aria-label="Checkbox for following text input">
                                </div>
                            </div>
                        </div> 
                        <div class="form-group">
                            <label asp-for="@Model.objVehiculos.Nombre" class="control-label"></label>
                            <input asp-for="@Model.objVehiculos.Nombre" class="form-control" autocomplete="off" maxlength="40" />                                                   
                        </div>                         
                        <br />
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-primary"> Guardar</button>
                            <button class="btn btn-danger" data-dismiss="modal"> Cancelar</button>
                        </div>                         
                    </form>
                    <script src="~/js/validaciones/campos-obligatorios.js"></script>
                </div>
            </div>
        </div>
    </div>
</div>