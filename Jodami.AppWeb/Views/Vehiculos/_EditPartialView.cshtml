@model Jodami.AppWeb.Models.ViewModels.VMVehiculos

<div class="modal fade" id="EditEntidad-@Model.IdVehiculo" aria-labelledby="EditEntidadLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">   
            <div class="modal-header">
                <h2 class="modal-title">Editar Vehículo</h2>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">x</span>
                </button>
            </div> 
            <div class="modal-body">       
                <form asp-action="Editar" method="post" class="needs-validation" novalidate>                    
                    <input type="hidden" asp-for="@Model.IdVehiculo" />

                    <div class="row">
                        <div class="col-sm-6 form-group">
                            <label class="control-label">Placa</label>
                            <input asp-for="@Model.Placa" class="form-control" autocomplete="off" required maxlength="40" />
                            <div class="invalid-feedback">Placa obligatorio</div>
                        </div>
                        <div class="col-sm-6 form-group">
                            <label class="control-label">Certificado</label>
                            <input asp-for="@Model.Certificado" class="form-control" autocomplete="off" required maxlength="40" />
                            <div class="invalid-feedback">Certificado obligatorio</div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-5 form-group">
                            <label asp-for="@Model.Marca" class="control-label"></label>
                            <input asp-for="@Model.Marca" class="form-control" autocomplete="off" required maxlength="40" />
                            <div class="invalid-feedback">Marca obligatorio</div>
                        </div>
                        <div class="col-sm-5 form-group">
                            <label asp-for="@Model.Modelo" class="control-label"></label>
                            <input asp-for="@Model.Modelo" class="form-control" autocomplete="off" required maxlength="40" />
                            <div class="invalid-feedback">Modelo obligatorio</div>
                        </div>
                        <div class="col-sm-2 form-group">
                            <label asp-for="@Model.Color" class="control-label">Color</label>
                            <input asp-for="@Model.Color" class="form-control" autocomplete="off" required maxlength="40" />
                            <div class="invalid-feedback">Color obligatorio</div>
                        </div>
                    </div>

                    <div class="row">
                            <div class="col-sm-10 form-group">
                            <div class="form-group">
                                <label asp-for="@Model.Nombre" class="control-label"></label>
                                <input asp-for="@Model.Nombre" class="form-control" autocomplete="off" maxlength="40" />
                            </div>
                            </div>
                            <div class="col-sm-2 form-group">
                                <div class="form-group">
                                <label for="IdFlete" class="control-label">Tipo de Flete</label>
                                <select id="IdFlete" class="form-control" asp-for="@Model.IdFlete" asp-items="@(new SelectList(@Model.TiposDeFlete, "IdFlete", "Codigo") ) ">
                                    <option value="">Seleccionar</option>
                                </select>
                            </div>
                            </div>
                        </div>

                    <div class="row">
                        <div class="col-sm-3 form-group">
                            <div class="form-group">
                                <label asp-for="@Model.PesoKg" class="control-label"></label>
                                <input asp-for="@Model.PesoKg" class="form-control" autocomplete="off" style="text-align: center" />
                            </div>
                        </div>
                        <div class="col-sm-1 form-group">
                        </div>
                        <div class="col-sm-3 form-group">
                            <div class="form-group">
                                <label class="control-label">Pertenece a JODAMI</label>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" asp-for="@Model.EsDeEmpresa" style="text-align: center">
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-1 form-group">
                        </div>
                        <div class="col-sm-3 form-group">
                            <div class="form-group">
                                <label class="control-label">Estado</label>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" asp-for="@Model.EsActivo" style="text-align: center">
                                </div>
                            </div>
                        </div>
                    </div>

                   
                    <br /> 
                    <div class="modal-footer">                      
                        <button type="submit" class="btn btn-primary"> Guardar</button>
                        <button class="btn btn-danger" data-dismiss="modal"> Cancelar</button>
                    </div>
                </form>
                <script src="~/js/validaciones/campos-obligatorios.js"></script>
            </div>
        </div>
    </div>   
</div>