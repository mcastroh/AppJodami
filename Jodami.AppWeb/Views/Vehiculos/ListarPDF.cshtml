@model IEnumerable<Jodami.AppWeb.Models.ViewModels.VMVehiculos>

@{
    Layout = null;
}

<!DOCTYPE html>

<html> 

<head>       
    <partial name="_ReporteEncabezado" />
    <style>
        body {
            font-family: Arial, Arial, Helvetica, sans-serif;
        } 
    </style>
</head> 

<body>   
    <div class="contenedor"> 
        <table class="tbproductos table table-sm table-bordered table-striped" id="tabla" width="100%" cellspacing="0">      
            <thead class="table-dark">
                <tr style="text-align: left">                  
                    <th>Placa</th>
                    <th>Certificado</th>
                    <th>Nombre</th>
                    <th>Marca</th>
                    <th>Modelo</th>
                    <th>Color</th>
                    <th>Peso (kg)</th>
                    <th>Jodami</th>
                    <th>Est</th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var item in Model)
                    {
                        <tr>
                            <td align="left">@Html.DisplayFor(m => item.Placa)</td>
                            <td align="left">@Html.DisplayFor(m => item.Certificado)</td>
                            <td align="left">@Html.DisplayFor(m => item.Nombre)</td>
                            <td align="left">@Html.DisplayFor(m => item.Marca)</td>
                            <td align="left">@Html.DisplayFor(m => item.Modelo)</td>
                            <td align="left">@Html.DisplayFor(m => item.Color)</td>
                            <td align="right">@Html.DisplayFor(m => item.PesoKg)</td>
                            <td align="center">@Html.DisplayFor(m => item.EsDeEmpresa)</td>
                            <td align="center">@Html.DisplayFor(m => item.EsActivo)</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div> 
</body>
</html> 