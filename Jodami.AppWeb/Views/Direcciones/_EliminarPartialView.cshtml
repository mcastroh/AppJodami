@model Jodami.AppWeb.Models.Dto.DtoDirecciones

<div class="modal fade" id="EliminarEntidad-@Model.NewSocioDireccion.IdSocioDireccion" aria-labelledby="EliminarEntidadLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Eliminar Dirección</h2>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">x</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Eliminar" method="post">
                    <input type="hidden" asp-for="@Model.NewDireccion.IdDireccion" />
                    <input type="hidden" asp-for="@Model.NewSocioDireccion.IdSocio" />
                    <input type="hidden" asp-for="@Model.IdSocio" />
                    <input type="hidden" asp-for="@Model.TipoNroDcmto" />
                    <input type="hidden" asp-for="@Model.Nombres" />
                    <input type="hidden" asp-for="@Model.Situacion" />
                    <input type="hidden" asp-for="@Model.TipoSocio" />
                    <input type="hidden" asp-for="@Model.ControladorOrigen" />
                    <input type="hidden" asp-for="@Model.AccionOrigen" />
                     
                    @* ---------------------------------- *@
                    @* Tipo de dirección, Datos de la Via *@
                    @* ---------------------------------- *@
                    <div class="row form-group">
                        <div class="col-md-2">
                            <label class="control-label">Tipo de Dirección</label>
                            <select class="form-control" asp-for="@Model.NewDireccion.IdTipoDireccion" disabled asp-items="@(new SelectList(@Model.LstTipoDirecciones, "IdTipoDireccion", "Descripcion"))">
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="control-label">Tipo de Vía</label>
                            <select class="form-control" asp-for="@Model.NewDireccion.IdTipoVia" disabled asp-items="@(new SelectList(@Model.LstTipoVias, "IdTipoVia", "Descripcion"))">
                            </select>
                        </div>
                        <div class="col-md-5">
                            <label class="control-label">Nombre de la Vía</label>
                            <input id="nombreVia" class="form-control" asp-for="@Model.NewDireccion.NombreVia" class="form-control" disabled />
                        </div>
                        <div class="col-md-2">
                            <label class="control-label">Número de Vía</label>
                            <input id="numeroVia" class="form-control" asp-for="@Model.NewDireccion.NumeroVia" class="form-control" disabled />
                        </div>
                    </div>

                    @* ---------------- *@
                    @* Datos de la Zona *@
                    @* ---------------- *@
                    <hr />
                    <div class="row">
                        <div class="col-md-3">
                            <label class="control-label">Tipo de Zona</label>
                            <select id="cboTipoZona" class="form-control" asp-for="@Model.NewDireccion.IdTipoZona" disabled asp-items="@(new SelectList(@Model.LstTipoZonas, "IdTipoZona", "Descripcion"))">
                            </select>
                        </div>
                        <div class="col-md-9">
                            <label class="control-label">Nombre de Zona</label>
                            <input id="nombreZona" class="form-control" asp-for="@Model.NewDireccion.NombreZona" class="form-control" disabled />
                        </div>
                    </div>

                    @* ---------------- *@
                    @* Datos del Ubigeo *@
                    @* ---------------- *@
                    <hr />
                    <div class="row">
                        <div class="col-sm-3">
                            <label class="form-label">Departamento</label> 
                            <input id="numeroVia" class="form-control" asp-for="@Model.NewSocioDireccion.IdDireccionNavigation.IdDistritoNavigation.IdProvinciaNavigation.IdDepartamentoNavigation.DepartamentoName" class="form-control" disabled />
                        </div>
                        <div class="col-sm-3">
                            <label class="form-label">Provincia</label>
                            <input id="numeroVia" class="form-control" asp-for="@Model.NewSocioDireccion.IdDireccionNavigation.IdDistritoNavigation.IdProvinciaNavigation.ProvinciaName" class="form-control" disabled />
                        </div>
                        <div class="col-sm-3">
                            <label class="form-label">Distrito</label>
                            <input id="numeroVia" class="form-control" asp-for="@Model.NewSocioDireccion.IdDireccionNavigation.IdDistritoNavigation.DistritoName" class="form-control" disabled />
                        </div>
                    </div> 

                    @*-------------- *@
                    @* Pie de página *@
                    @*-------------- *@
                    <div class="modal-footer">
                        <button id="btnSubmit" type="submit" class="btn btn-primary"> Eliminar</button>
                        <button class="btn btn-danger" data-dismiss="modal"> Cancelar</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div> 