@model Jodami.AppWeb.Models.Dto.DtoDirecciones

<div class="modal fade" id="AddEntidad" aria-labelledby="AddEntidadLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title" id="AddEntidadLabel">Adicionar Dirección</h2>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="modal-body">
                   
                    <form asp-action="Adicionar" method="post" class="needs-validation" novalidate>
                        <input type="hidden" asp-for="@Model.NewDireccion.IdDireccion" />
                        <input type="hidden" asp-for="@Model.NewSocioDireccion.IdSocio" />
                        <input type="hidden" asp-for="@Model.IdSocio" />
                        <input type="hidden" asp-for="@Model.TipoNroDcmto" />
                        <input type="hidden" asp-for="@Model.Nombres" />
                        <input type="hidden" asp-for="@Model.Situacion" />
                        <input type="hidden" asp-for="@Model.TipoSocio" />
                        <input type="hidden" asp-for="@Model.ControladorOrigen" />
                        <input type="hidden" asp-for="@Model.AccionOrigen" />

                        
                        @* ---------------------------------- *@
                        @* Tipo de dirección, Datos de la Via *@
                        @* ---------------------------------- *@
                        <div class="row form-group">
                            <div class="col-md-2">
                                <label class="control-label">Tipo de Dirección</label>
                                <select class="form-control" asp-for="@Model.NewDireccion.IdTipoDireccion" required asp-items="@(new SelectList(@Model.LstTipoDirecciones, "IdTipoDireccion", "Descripcion"))">
                                    <option value="">Seleccionar</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <label class="control-label">Tipo de Vía</label>
                                <select class="form-control" asp-for="@Model.NewDireccion.IdTipoVia" required asp-items="@(new SelectList(@Model.LstTipoVias, "IdTipoVia", "Descripcion"))">
                                    <option value="">Seleccionar</option>
                                </select>
                            </div>
                            <div class="col-md-5">
                                <label class="control-label">Nombre de la Vía</label>
                                <input id="nombreVia" class="form-control" asp-for="@Model.NewDireccion.NombreVia" required class="form-control" placeholder="Ingrese nombre de vía" />
                                <span asp-validation-for="@Model.NewDireccion.NombreVia" class="text-danger"></span>
                            </div>
                            <div class="col-md-2">
                                <label class="control-label">Número de Vía</label>
                                <input id="numeroVia" class="form-control" asp-for="@Model.NewDireccion.NumeroVia" required class="form-control" placeholder="Ingrese nro de vía" />
                                <span asp-validation-for="@Model.NewDireccion.NumeroVia" class="text-danger"></span>
                            </div>
                        </div> 

                        @* ---------------- *@
                        @* Datos de la Zona *@
                        @* ---------------- *@
                        <hr />
                        <div class="row">
                            <div class="col-md-2">
                                <label class="control-label">Tipo de Zona</label>
                                <select id="cboTipoZona" class="form-control" asp-for="@Model.NewDireccion.IdTipoZona" asp-items="@(new SelectList(@Model.LstTipoZonas, "IdTipoZona", "Descripcion"))">
                                    <option value="">Seleccionar</option>
                                </select>
                            </div>

                            <div class="col-md-10">
                                <label class="control-label">Nombre de Zona</label>
                                <input id="nombreZona" class="form-control" asp-for="@Model.NewDireccion.NombreZona" class="form-control" placeholder="Ingrese nombre de zona" />
                                <span asp-validation-for="@Model.NewDireccion.NombreZona" class="text-danger"></span>
                            </div>
                        </div>

                        @* ---------------- *@
                        @* Datos del Ubigeo *@
                        @* ---------------- *@
                        <hr />
                        <div class="row">
                            <div class="col-sm-3">
                                <label class="form-label">Departamento</label>
                                <select id="cbodepartamento" asp-for="@Model.DepartamentoKey" class="form-control form-select-sm"></select>
                            </div>
                            <div class="col-sm-3">
                                <label class="form-label">Provincia</label>
                                <select id="cboprovincia" asp-for="@Model.ProvinciaKey" class="form-control form-select-sm"></select>
                            </div>
                            <div class="col-sm-3">
                                <label class="form-label">Distrito</label>
                                <select id="cbodistrito" asp-for="@Model.DistritoKey" class="form-control form-select-sm"></select>
                            </div>

                        </div>
                        <br /> 


                        @*-------------- *@
                        @* Pie de página *@
                        @*-------------- *@
                        <hr />
                        <div class="modal-footer">
                            <button id="btnSubmit" type="submit" class="btn btn-primary" onclick="validarFormulario()"> Guardar</button>
                            <button class="btn btn-danger" data-dismiss="modal"> Cancelar</button>
                        </div>
                         
                    </form>
                   
                    <script src="https://code.jquery.com/jquery-1.9.1.min.js"></script> 

                    <script>

                        (function () {
                            'use strict' 
                            var forms = document.querySelectorAll('.needs-validation')
                           
                            Array.prototype.slice.call(forms)
                                .forEach(function (form) {
                                    form.addEventListener('submit', function (event) {
                                        if (!form.checkValidity()) {
                                            event.preventDefault()
                                            event.stopPropagation()
                                        }
                                        form.classList.add('was-validated')
                                    }, false)
                                }) 
                        })() 
                                           

                        $(document).ready(function () {
                            obtenerDepartamentos();
                            obtenerProvincias();
                            obtenerDistritos();
                        })

                        function obtenerDepartamentos() {
                            console.log('obtenerDepartamentos')

                            $.ajax({
                                url: "@Url.Action("getUbigeoDepartamento", "UbigeoViewGenerico")",
                                type: "GET",
                                dataType: "json",
                                success: function (response) {
                                    $("#cbodepartamento").append(
                                        $("<option>").attr({ "value": "" }).text("Seleccionar")
                                    )

                                    $.each(response, function (index, elemento) {

                                        $("#cbodepartamento").append(
                                            $("<option>").attr({ "value": elemento.departamento }).text(elemento.departamento)
                                        )

                                    })

                                    $("#cbodepartamento").select2({ placeholder: "Seleccionar", width: "100%" });
                                }
                            })

                        }

                        function obtenerProvincias() {
                            console.log('obtenerProvincias')
                            var _departamento = $("#cbodepartamento option:selected").val()

                            $.ajax({
                                url: "@Url.Action("getUbigeoProvinciasByDepartamento", "UbigeoViewGenerico")",
                                type: "GET",
                                dataType: "json",
                                data: {
                                    b_departamento: _departamento
                                },
                                success: function (response) {
                                    $("#cboprovincia").empty();

                                    $("#cboprovincia").append(
                                        $("<option>").attr({ "value": "" }).text("Seleccionar")
                                    )

                                    $.each(response, function (index, elemento) {

                                        $("#cboprovincia").append(
                                            $("<option>").attr({ "value": elemento.provincia }).text(elemento.provincia)
                                        )

                                    })

                                    $("#cboprovincia").select2({ placeholder: "Seleccionar", width: "100%" });
                                }
                            })
                        }

                        $("#cbodepartamento").on("change", function () {
                            obtenerProvincias();
                            $('#cboprovincia').trigger('change')
                        })

                        function obtenerDistritos() {
                            console.log('obtenerDistritos')
                            var _departamento = $("#cbodepartamento option:selected").val()
                            var _provincia = $("#cboprovincia option:selected").val()

                            $.ajax({
                                url: "@Url.Action("getUbigeoDistritosByDepartamentoAndProvincia", "UbigeoViewGenerico")",
                                type: "GET",
                                dataType: "json",
                                data: {
                                    b_departamento: _departamento,
                                    b_provincia: _provincia
                                },
                                success: function (response) {
                                    $("#cbodistrito").empty();
                                    $("#cbodistrito").append(
                                        $("<option>").attr({ "value": "" }).text("Seleccionar")
                                    )

                                    $.each(response, function (index, elemento) {
                                        $("#cbodistrito").append(
                                            $("<option>").attr({ "value": elemento.idUbigeo }).text(elemento.distrito)
                                        )
                                    })

                                    $("#cbodistrito").select2({ placeholder: "Seleccionar", width: "100%" });
                                }
                            })
                        }

                        $("#cboprovincia").on("change", function () {
                            obtenerDistritos();
                        })

                    </script>

                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {

   
} 