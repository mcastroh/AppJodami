@model Jodami.AppWeb.Models.ViewModels.VMUbigeoDistrito

@{
    var dptoText = $"Departamento: {Model.UbiDptoCodigo} - {Model.UbiDptoName}";
    var provText = $"Provincia: {Model.UbiProvCodigo.Substring(2, 2)} - {Model.UbiProvName}";
}

<div class="modal fade" id="EditEntidad-@Model.IdDistrito" aria-labelledby="EditEntidadLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">   
            <div class="modal-header">
                <h2 class="modal-title">Editar Distrito</h2>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">x</span>
                </button>
            </div> 
            <div class="modal-body">       
                <form asp-action="Editar" method="post" class="needs-validation" novalidate>
                    <input type="hidden" asp-for="@Model.UbiDptoKey" />
                    <input type="hidden" asp-for="@Model.UbiDptoCodigo" />
                    <input type="hidden" asp-for="@Model.UbiProvKey" />
                    <input type="hidden" asp-for="@Model.UbiProvCodigo" />
                    <input type="hidden" asp-for="@Model.IdDistrito" />
                                 
                    <div class="row">
                        <div class="col-sm-12 form-group">
                            <label class="control-label">Departamento</label>
                            <input asp-for="@dptoText" class="form-control" disabled readonly="readonly" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12 form-group">
                            <label class="control-label">Provincia</label>
                            <input asp-for="@provText" class="form-control" disabled readonly="readonly" />
                        </div>
                    </div>

                    @{
                        string keyDist = Model.CodigoDistrito.Substring(4, 2);
                    }

                    <div class="form-group">                       
                        <label asp-for="@keyDist" class="control-label">Código</label>
                        <input asp-for="@keyDist" class="form-control" autocomplete="off" required maxlength="2" />
                        <div class="invalid-feedback">Descripción obligatorio</div>
                    </div> 
                    <div class="form-group">
                        <label class="control-label">Distrito</label>
                        <input asp-for="@Model.DistritoName" class="form-control" autocomplete="off" required maxlength="100" />
                        <div class="invalid-feedback">Descripción obligatorio</div>
                    </div>

                    <br /> 
                    <div class="modal-footer">                      
                        <button type="submit" class="btn btn-primary"> Guardar</button>
                        <button class="btn btn-danger" data-dismiss="modal"> Cancelar</button>
                    </div>
                </form>
                <script src="~/js/validaciones/campos-obligatorios.js"></script>
            </div>
        </div>
    </div>   
</div>