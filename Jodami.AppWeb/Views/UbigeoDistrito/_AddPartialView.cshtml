@model Jodami.AppWeb.Models.ViewModels.VMUbigeoDistrito

@{
    var dptoText = $"Departamento: {Model.UbiDptoCodigo} - {Model.UbiDptoName}";
    var provText = $"Provincia: {Model.UbiProvCodigo.Substring(2,2)} - {Model.UbiProvName}";
}

<div class="modal fade" id="AddEntidad" aria-labelledby="AddEntidadLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title" id="AddEntidadLabel">Adicionar Distrito</h2>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>          
            <div class="modal-body">
                <div class="modal-body">   
                    <form asp-action="Adicionar" method="post" class="needs-validation" novalidate>                        
                        <input type="hidden" asp-for="@Model.UbiDptoKey" />
                        <input type="hidden" asp-for="@Model.UbiDptoCodigo" />
                        <input type="hidden" asp-for="@Model.UbiProvKey" />
                        <input type="hidden" asp-for="@Model.UbiProvCodigo" />

                        <div class="row">
                            <div class="col-sm-12 form-group">
                                <label class="control-label">Departamento</label>
                                <input asp-for="@dptoText" class="form-control" disabled readonly="readonly" />
                            </div>                             
                        </div>

                        <div class="row">
                            <div class="col-sm-12 form-group">
                                <label class="control-label">Provincia</label>
                                <input asp-for="@provText" class="form-control" disabled readonly="readonly" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="@Model.CodigoDistrito" class="control-label">Código</label>
                            <input asp-for="@Model.CodigoDistrito" class="form-control" autocomplete="off" required maxlength="2" />
                            <div class="invalid-feedback">Descripción obligatorio</div>
                        </div>

                        <div class="form-group">
                            <label asp-for="@Model.DistritoName" class="control-label">Distrito</label>
                            <input asp-for="@Model.DistritoName" class="form-control" autocomplete="off" required maxlength="100" />
                            <div class="invalid-feedback">Descripción obligatorio</div>
                        </div>

                        <br />
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-primary"> Guardar</button>
                            <button class="btn btn-danger" data-dismiss="modal"> Cancelar</button>
                        </div>
                    </form>
                    <script src="~/js/validaciones/campos-obligatorios.js"></script>
                </div>
            </div>
        </div>
    </div>
</div>