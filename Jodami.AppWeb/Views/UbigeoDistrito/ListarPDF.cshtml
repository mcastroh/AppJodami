@model IEnumerable<Jodami.AppWeb.Models.ViewModels.VMUbigeoDistrito>

@{
    Layout = null;
    var dptoText = string.Empty;
    var provText = string.Empty;

    if (Model.Count() > 0)
    {
        dptoText = $"Departamento: {Model.FirstOrDefault().UbiDptoCodigo} - {Model.FirstOrDefault().UbiDptoName}";
        provText = $"Provincia: {Model.FirstOrDefault().UbiProvCodigo.Substring(2, 2)} - {Model.FirstOrDefault().UbiProvName}";
    }
}

<!DOCTYPE html>

<html> 

<head>       
    <partial name="_ReporteEncabezado" />
    <style>
        body {
            font-family: Arial, Arial, Helvetica, sans-serif;
        } 
    </style>
</head> 

<body>
    <div class="contenedor">
        <table class="tbproductos table table-sm table-bordered table-striped" id="tabla" width="100%" cellspacing="0">
            <thead class="table-dark">               
                <tr style="text-align: left">
                    <th align="center" style="width:30px" scope="col">Código</th>
                    <th class="tbth" style="width:150px">Distrito</th>
                </tr>
                <tr></tr>
            </thead>
            <tbody>                                
                <tr>
                    <th colspan="2" align="left"><h3>@dptoText</h3></th>
                </tr>
                <tr>                     
                    <th colspan="2" align="left"><h3>@provText</h3></th>
                </tr>
                @{
                    foreach (var item in Model)
                    {
                        string keyDist = item.CodigoDistrito.Substring(4, 2);                    

                        <tr>
                            <td align="center">@Html.DisplayFor(m => @keyDist)</td>
                            <td align="left">@Html.DisplayFor(m => item.DistritoName)</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</body>
</html> 