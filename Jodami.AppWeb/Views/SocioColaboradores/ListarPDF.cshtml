@model IEnumerable<Jodami.AppWeb.Models.ViewModels.VMSociosColaboradores>

@{
    Layout = null;
}

<!DOCTYPE html>

<html> 

<head>       
    <partial name="_ReporteEncabezado" />
    <style>
        body {
            font-family: Arial, Arial, Helvetica, sans-serif;
        } 
    </style>
</head> 

<body>   
    <div class="contenedor"> 
        <table class="tbproductos table table-sm table-bordered table-striped" id="tabla" width="100%" cellspacing="0">      
            <thead class="table-dark">
                <tr style="text-align: center">
                    <th>Colaborador</th>
                    <th>T.D</th>
                    <th>Nro.Dcmto</th>
                    <th>Celular</th>
                    <th>Email</th>
                    <th>EST</th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var item in Model)
                    {                        
                        <tr>
                            <td align="left">@Html.DisplayFor(m => item.ApellidosAndNombres)</td>
                            <td align="center">@Html.DisplayFor(m => item.CodigoTipoDcmto)</td>
                            <td align="left">@Html.DisplayFor(m => item.NumeroDcmtoIdentidad)</td>
                            <td align="left">@Html.DisplayFor(m => item.Celular)</td>
                            <td align="left">@Html.DisplayFor(m => item.Email)</td>
                            <td align="center">@Html.DisplayFor(m => item.EsActivo)</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div> 
</body>
</html> 