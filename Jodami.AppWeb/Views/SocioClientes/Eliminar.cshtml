@model Jodami.AppWeb.Models.ViewModels.VMSociosProveedores

@{
    ViewData["Title"] = "Proveedores";    
}

<head>
    <link href="~/css/socios-de-negocio.css" rel="stylesheet" />    
    <link href="~/css/style.css" rel="stylesheet" /> 
    <link href="~/css/style-error.css" rel="stylesheet" />
</head>

<body>

    <div class="container">
        <h2>Eliminar Proveedor</h2>        
    </div>

    <div class="container">
        <form id="form" asp-action="Eliminar" asp-controller="SocioProveedores" method="post" class="needs-validation" novalidate>
            <input type="hidden" asp-for="@Model.IdSocio" />
            <input type="hidden" asp-for="@Model.IdTipoSocio" />


            @*-------------------------------------------------- *@
            @* Tipo documento, Nro dcmto identidad, Razón social *@
            @*-------------------------------------------------- *@
            <br />
            <div class="row">
                <div class="col-sm-4 form-group">
                    <label for="cbxTipoDcmtoIdentidad" class="control-label">Tipo documento</label>
                    <select disabled="true"  id="cbxTipoDcmtoIdentidad" required class="form-control"
                            asp-for="IdTipoDcmtoIdentidadAsignado"
                            asp-items="@(new SelectList(@Model.TiposDcmtoIdentidad, "IdTipoDcmtoIdentidad", "SimboloAndDescripcion"))" >                        
                    </select>
                </div>

                <div class="col-sm-2 form-group">
                    <label for="NumeroDcmtoIdentidad" class="control-label">Nro dcmto identidad</label>
                    <input disabled="true" id="NumeroDcmtoIdentidad" asp-for="NumeroDcmtoIdentidad" class="form-control text-uppercase" />
                </div>
                <div id="tipoDcmtoRUC" class="col-sm-6 form-group">
                    <label for="RazonSocial" class="control-label">Razón social</label>
                    <input disabled="true" id="RazonSocial" asp-for="RazonSocial" class="form-control" />
                </div>
            </div>

            @*------------------- *@
            @* Apellido y Nombres *@
            @*------------------- *@
            <div id="tipoDcmtoNoRUC" class="row">
                <div class="col-sm-3 form-group">
                    <label for="ApellidoPaterno" class="control-label">Apellido paterno</label>
                    <input disabled="true" id="ApellidoPaterno" asp-for="ApellidoPaterno" class="form-control" />
                </div>
                <div class="col-sm-3 form-group">
                    <label for="ApellidoMaterno" class="control-label">Apellido materno</label>
                    <input disabled="true" id="ApellidoMaterno" asp-for="ApellidoMaterno" class="form-control" />
                </div>
                <div class="col-sm-3 form-group">
                    <label for="PrimerNombre" class="control-label">Primer nombre</label>
                    <input disabled="true" id="PrimerNombre" asp-for="PrimerNombre" class="form-control" />
                </div>
                <div class="col-sm-3 form-group">
                    <label for="SegundoNombre" class="control-label">Segundo nombre</label>
                    <input disabled="true" id="SegundoNombre" asp-for="SegundoNombre" class="form-control" />
                </div>
            </div>

            @*------------------------------------------- *@
            @* Teléfono, Celular, Pagina Web, Zona Postal *@
            @*------------------------------------------- *@
            <hr />
            <div class="row">
                <div class="col-sm-2 form-group">
                    <label for="Celular" class="control-label">Celular</label>
                    <input disabled="true" id="Celular" asp-for="Celular" class="form-control" />
                </div>
                <div class="col-sm-2 form-group">
                    <label for="Telefono" class="control-label">Teléfono</label>
                    <input disabled="true" id="Telefono" asp-for="Telefono" class="form-control" />
                </div>
                <div class="col-sm-6 form-group">
                    <label for="PaginaWeb" class="control-label">Página Web</label>
                    <input disabled="true" id="PaginaWeb" asp-for="PaginaWeb" class="form-control" />
                </div> 
                <div class="col-sm-2 form-group">
                    <label for="ZonaPostal" class="control-label">Zona Postal</label>
                    <input disabled="true" id="ZonaPostal" asp-for="ZonaPostal" class="form-control text-uppercase" />
                </div>
            </div>

            @*------------------------------------------------------------------- *@
            @* Grupo económico, Fecha inicio de operaciones, Tipo de calificación *@
            @*------------------------------------------------------------------- *@
            <hr />
            <div class="row"> 
                <div class="col-sm-6 form-group">
                    <label for="IdGrupoSocioNegocio" class="control-label">Grupo económico</label>
                    <select disabled="true" id="IdGrupoSocioNegocio" class="form-control" asp-for="IdGrupoSocioNegocio" asp-items="@(new SelectList(@Model.nav_GrupoEconomico, "IdSocio", "RazonSocial") ) ">
                     </select>
                </div>
                <div class="col-sm-3 form-group">
                    <label for="FechaInicioOperaciones" class="control-label">Inicio de operaciones</label>
                    <input disabled="true" asp-for="FechaInicioOperaciones" class="form-control " />
                </div>

                <div class="col-sm-3 form-group">
                    <label for="IdTipoCalificacion" class="control-label">Calificación</label>
                    <select disabled="true" id="IdTipoCalificacion" class="form-control" asp-for="IdTipoCalificacion" asp-items="@(new SelectList(@Model.nav_Calificacion, "IdTipoCalificacion", "CodigoAndDescripcion") ) ">
                     </select>
                </div>
            </div> 

            @*-------------------------------------------------------- *@
            @* Afecto retención, Afecto percepción, Buen contribuyente *@
            @*-------------------------------------------------------- *@
            <hr />
            <div class="row">
                <div class="col-sm-3 form-group">
                    <label for="IsAfectoRetencion" class="d-flex justify-content-center">Afecto Retención</label>
                    <div class="form-check d-flex justify-content-center">
                        <input disabled="true" id="IsAfectoRetencion" class="largerCheckbox" type="checkbox" asp-for="IsAfectoRetencion">
                    </div>
                </div>
                <div class="col-sm-3 form-group">
                    <label for="IsAfectoPercepcion" class="d-flex justify-content-center">Afecto Percepción</label>
                    <div class="form-check d-flex justify-content-center">
                        <input disabled="true" id="IsAfectoPercepcion" class="largerCheckbox" type="checkbox" asp-for="IsAfectoPercepcion">
                    </div>
                </div>
                <div class="col-sm-3 form-group">
                    <label for="IsBuenContribuyente" class="d-flex justify-content-center">Buen Contribuyente</label>
                    <div class="form-check d-flex justify-content-center">
                        <input disabled="true" id="IsBuenContribuyente" class="largerCheckbox" type="checkbox" asp-for="IsBuenContribuyente">
                    </div>
                </div> 
            </div>

            @*----------------- *@
            @* Mensaje de Error *@
            @*----------------- *@
            @if (!string.IsNullOrEmpty(@ViewBag.Mensaje))
            {
                <div class="card" style="margin-top:20px">
                    <div class="alert alert-warning" role="alert">
                        <h5 class="text-md-left"><em>@ViewBag.Mensaje</em></h5>
                    </div>
                </div>
            }

            @*-------------- *@
            @* Pie de página *@
            @*-------------- *@
            <div class="modal-footer">              
                <input id="btnGuardar" type="submit" class="btn btn-primary" value="Eliminar">
                <a class="btn btn-danger" href="@Url.Action("Index", "SocioProveedores")"><i class="bi bi-printer"></i> Cancelar</a> 
            </div>

        </form>
    </div>

    <script src="~/vendor/jquery/jquery.js"></script>
    <script src="~/js/proveedores/ruc-or-noruc.js"></script>
    <script src="~/js/proveedores/validar-proveedor.js"></script>

</body>
 