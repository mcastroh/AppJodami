@model Jodami.AppWeb.Models.Dto.DtoFormaPagos

@{
    Layout = null;
    string titRucNombres = @Model.TipoNroDcmto + " " + @Model.Nombres;
}

<!DOCTYPE html>

<html> 

<head>       
    <partial name="_ReporteEncabezado" />
    <style>
        body {
            font-family: Arial, Arial, Helvetica, sans-serif;
        } 

        #contenedorSubTitulo {
            margin: 0 auto;
            text-align: left;
            padding: .2em;
            width: 720px;            
            border: 5px solid #B7C5DF; 
        }

    </style> 
</head> 

<body> 

    <div class="contenedorSubTitulo">
        <table class="xtbproductos table table-sm table-bordered table-striped" id="tabla" width="100%" cellspacing="0">      
            <thead class="table-dark">
                <tr>                    
                    <th align="left"><h2>@titRucNombres</h2></th>
                </tr>                
            </thead>
        </table>
    </div> 

    <div class="contenedor"> 
        <table class="tbproductos table table-sm table-bordered table-striped" id="tabla" width="100%" cellspacing="0">      
            <thead class="table-dark">
                <tr style="text-align: center">
                    <th class="tbth">Formas de Pago</th>  
                    <th class="tbth">Descripción</th>
                    <th class="tbth">Días</th>
                </tr>
            </thead>
            <tbody>
                @{
                    @foreach (var item in Model.vmTipoFormaPago.Where(x=> x.SeleccionInicial).ToList())
                    {
                        <tr>
                            <td align="left">@Html.DisplayFor(m => item.Codigo) </td>
                            <td align="left">@Html.DisplayFor(m => item.Descripcion) </td>
                            <td align="left">@Html.DisplayFor(m => item.DiasDePago) </td>
                        </tr> 
                    }
                }
            </tbody>
        </table>
    </div> 
</body>
</html> 