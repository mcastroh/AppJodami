@model Jodami.AppWeb.Models.Dto.DtoFormaPagos

<div class="modal fade" id="EliminarEntidad-@Model.NewSocioFormaPago.IdFormaPago" aria-labelledby="EliminarEntidadLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Eliminar Cuenta Bancaria</h2>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">x</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Eliminar" method="post">
                     <input type="hidden" asp-for="@Model.NewSocioCuentaBanco.IdCuenta" />
                    <input type="hidden" asp-for="@Model.NewSocioCuentaBanco.IdSocio" />
                    <input type="hidden" asp-for="@Model.IdSocio" />
                    <input type="hidden" asp-for="@Model.TipoNroDcmto" />
                    <input type="hidden" asp-for="@Model.Nombres" />
                    <input type="hidden" asp-for="@Model.Situacion" />
                    <input type="hidden" asp-for="@Model.TipoSocio" />
                    <input type="hidden" asp-for="@Model.ControladorOrigen" />
                    <input type="hidden" asp-for="@Model.AccionOrigen" />
                     
                    <div class="row form-group">
                        <div class="col-md-6">
                            <label class="control-label">Entidad Financiera</label>
                            <select class="form-control" asp-for="@Model.NewSocioCuentaBanco.IdEntidadFinanciera" disabled asp-items="@(new SelectList(@Model.LstEntidadFinanciera, "IdEntidadFinanciera", "Descripcion"))">
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="control-label">Moneda</label>
                            <select class="form-control" asp-for="@Model.NewSocioCuentaBanco.IdMoneda" disabled asp-items="@(new SelectList(@Model.LstMoneda, "IdMoneda", "Descripcion"))">
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="control-label">Tipo de Cuenta</label>
                            <select class="form-control" asp-for="@Model.NewSocioCuentaBanco.IdTipoCuentaBancaria" disabled asp-items="@(new SelectList(@Model.LstTipoCuentaBancaria, "IdTipoCuentaBancaria", "Descripcion"))">
                            </select>
                        </div>
                    </div>

                    <hr />
                    <div class="row form-group">
                        <div class="col-md-5">
                            <label class="control-label">Número de Cuenta</label>
                            <input asp-for="@Model.NewSocioCuentaBanco.CodigoCuenta" class="form-control" disabled />
                        </div>
                        <div class="col-md-5">
                            <label class="control-label">Número de Cuenta Interbancaria</label>
                            <input asp-for="@Model.NewSocioCuentaBanco.CodigoCuentaInterbancaria" class="form-control" disabled />
                        </div>
                        <div class="col-md-2">
                            <label class="control-label">Estado Activo (en Check)</label>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" asp-for="@Model.NewSocioCuentaBanco.EsActivo" disabled>
                            </div>
                        </div>
                    </div>
                      
                    @*-------------- *@
                    @* Pie de página *@
                    @*-------------- *@
                    <br />
                    <div class="modal-footer">
                        <button id="btnSubmit" type="submit" class="btn btn-primary"> Eliminar</button>
                        <button class="btn btn-danger" data-dismiss="modal"> Cancelar</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div> 