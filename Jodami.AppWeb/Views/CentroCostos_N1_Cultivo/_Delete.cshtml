@model Jodami.AppWeb.Models.ViewModels.VMCentroCostos

<div class="modal fade" id="EliminarEntidad-@Model.IdCentroCosto" aria-labelledby="EliminarEntidadLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">   
            <div class="modal-header">
                <h2 class="modal-title">Eliminar Centro Costo Nivel Cultivo</h2>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">x</span>
                </button>
            </div> 
            <div class="modal-body">                  
                <form asp-action="Delete" method="post">                   
                    <input type="hidden" asp-for="IdCentroCosto" />
                    <input type="hidden" asp-for="IdNivelCentroCosto" />

                    <div class="row">
                        <div class="col-2 form-group">
                            <label for="codigo" class="control-label">Código</label>
                            <input id="codigo" asp-for="CodigoCentroCosto" class="form-control justify-content-center" disabled />
                        </div>
                        <div class="col-10 form-group">
                            <label for="descripcion" class="control-label">Descripción</label>
                            <input id="descripcion" asp-for="Descripcion" class="form-control" disabled  />                          
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="unidadGasto" class="control-label">Unidad de Gasto</label>
                        <select id="unidadGasto" asp-for="@Model.IdUnidadGasto" class="form-control form-select-sm" disabled asp-items="@(new SelectList(@Model.LstUnidadGasto, "IdUnidadGasto", "Descripcion"))">
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="sistemaConduccion" class="control-label">Sistema de Conducción</label>
                        <select id="sistemaConduccion" asp-for="@Model.IdSistemaConduccion" class="form-control form-select-sm" disabled asp-items="@(new SelectList(@Model.LstSistemaConduccion, "IdSistemaConduccion", "Descripcion"))">
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="cultivo" class="control-label">Cultivo</label>
                        <select id="cultivo" asp-for="@Model.IdCultivo" class="form-control form-select-sm" disabled asp-items="@(new SelectList(@Model.LstCultivo, "IdCultivo", "Descripcion"))">
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="ordenAplicacion" class="control-label">Numeración inicial Orden de Aplicación de Fertilizantes</label>
                        <input id="ordenAplicacion" type="number" disabled asp-for="OrdenAplicaFertilizantes" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label for="esCultivo" class="control-label">Si es Cultivo activar check</label>
                        <div class="form-check d-flex justify-content-left">
                            <input id="esCultivo" class="form-control largerCheckbox justify-content-left" type="checkbox" asp-for="@Model.EsNivelEspecifico" disabled>
                        </div>
                    </div>
                   
                    <div class="form-group">
                        <label for="EsActivo" class="control-label">Es Activo</label>
                        @{
                            if (@Model.EsActivo)
                            {
                                <input class="form-control" value="Activo" disabled  />
                            }
                            else
                            {
                                <input class="form-control" value="Inactivo" disabled />
                            }
                        }                     
                    </div>
                    <br /> 
                    <div class="modal-footer">                      
                        <button type="submit" class="btn btn-primary"> Eliminar</button>
                        <button class="btn btn-danger" data-dismiss="modal"> Cancelar</button>
                    </div>
                </form>                       
            </div>
        </div>
    </div>   
</div>

           