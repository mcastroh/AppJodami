@model Jodami.AppWeb.Models.ViewModels.VMTipoFlete

<div class="modal fade" id="EliminarEntidad-@Model.IdFlete" aria-labelledby="EliminarEntidadLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">   
            <div class="modal-header">
                <h2 class="modal-title">Eliminar Tipo de Flete</h2>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">x</span>
                </button>
            </div> 
            <div class="modal-body">                  
                <form asp-action="Eliminar" method="post">
                    <div class="form-group row row-cols-1">
                        <div class="col-sm-6">
                            <input type="hidden" asp-for="IdFlete" />
                            <label asp-for="Codigo" class="control-label"></label>
                            <input asp-for="Codigo" class="form-control" readonly="readonly" />
                        </div>
                        <div class="col-sm-6">
                            <label asp-for="EsActivo" class="control-label"></label>
                            @{
                                if (@Model.EsActivo)
                                {
                                    <input class="form-control" value="Activo" readonly="readonly" />
                                }
                                else
                                {
                                    <input class="form-control" value="Inactivo" readonly="readonly" />
                                }
                            }
                        </div>
                    </div>
                    <div class="form-group row row-cols-1">
                        <div class="col-sm-12">
                            <label asp-for="Descripcion" class="control-label"></label>
                            <textarea asp-for="Descripcion" class="form-control" readonly="readonly" rows="6"></textarea>
                        </div>
                    </div>                     
                    <br /> 
                    <div class="modal-footer">                      
                        <button type="submit" class="btn btn-primary"> Eliminar</button>
                        <button class="btn btn-danger" data-dismiss="modal"> Cancelar</button>
                    </div>
                </form>                       
            </div>
        </div>
    </div>   
</div>

           