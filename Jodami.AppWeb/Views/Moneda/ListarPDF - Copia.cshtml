@model IEnumerable<Jodami.AppWeb.Models.ViewModels.VMMoneda>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>

 

<head>   
    <meta name="viewport" content="width=device-width" />
    <title>Monedas</title>
    <partial name="_ReporteEncabezado" />
    
</head> 

 

<body>
    <style>
        P {
            background-image: url(http://www.htmlhelp.com/bg.png) 
        }
    </style>

    <div class="contenedor">
        <table style="width:100%">
            <tr>
                <td>          
                    <img src="~/iconos/logoJodami.jpg" style="width:90px; height:60px;" />                    
                </td>
                <td style="text-align:right">
                    <table style="margin-right:0;margin-left:auto">
                        <tr><td>@DateTime.Now.ToString("dd/MM/yyyy HH:mm")</td></tr>
                    </table>
                </td>
            </tr>
        </table>
        <br />
        <h2 style="text-align:center">Listado de Monedas</h2>
        <br />

        <table class="tbproductos table table-sm table-bordered table-striped" id="tabla" width="100%" cellspacing="0">      
            <thead class="table-dark">
                <tr style="text-align: left">
                    <th class="tbth" style="width:150px">Descripción</th>                   
                    <th align="center" style="width:30px" scope="col">Símbolo</th>
                    <th align="center" style="width:30px" scope="col">Código SUNAT</th>
                    <th align="center" style="width:30px" scope="col">Estado</th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(m => item.Descripcion)</td>
                            <td align="center">@Html.DisplayFor(m => item.Simbolo)</td>
                            <td align ="center">@Html.DisplayFor(m => item.IdSunat)</td>
                            <td align="center">@Html.DisplayFor(m => item.EsActivo)</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div> 
</body>
</html> 