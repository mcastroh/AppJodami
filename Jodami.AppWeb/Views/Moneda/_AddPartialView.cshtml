<div class="modal fade" id="AddMoneda" aria-labelledby="AddMonedaLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="AddMonedaLabel">Adicionar Moneda</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
           @*  <br /> *@
            <div class="modal-body">
                <div class="modal-body">
                    <form asp-action="Adicionar" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label class="control-label">Descripción</label>
                            <input id="Descripcion" name="Descripcion" class="form-control" autocomplete="off" />
                            @*   <span asp-validation-for="Descripcion" class="text-danger"></span> *@
                        </div>
                        <div class="form-group">
                            <label class="control-label">Símbolo</label>
                            <input id="Simbolo" name="Simbolo" class="form-control" autocomplete="off" />
                            @* <span asp-validation-for="Simbolo" class="text-danger"></span> *@
                        </div>
                        <div class="form-group">
                            <label class="control-label">Código SUNAT</label>
                            <input id="IdSunat" name="IdSunat" class="form-control" autocomplete="off" />
                            @* <span asp-validation-for="IdSunat" class="text-danger"></span> *@
                        </div>
                        <br />
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-primary"> Guardar</button>
                            <button class="btn btn-danger" data-dismiss="modal"> Cancelar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 