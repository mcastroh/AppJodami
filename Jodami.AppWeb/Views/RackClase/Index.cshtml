@model List<Jodami.AppWeb.Rack.RackClase>

@{
    ViewBag.Title = "Clases de Racks";
}

@Html.Hidden("UrlEliminar", Url.Action("Eliminar", "RackClase"))

<body onload="nobackbutton();" autocomplete="off">
    <div class="row-fluid">
        <h3 class="page-title">Configuración Clases de Racks</h3>
    </div>

    <div id="listado" class="row-fluid">
        <div class="portlet box grey table-custom">
            <div class="portlet-title">

                <div class="container-fluid">
                    <div class="row-fluid">
                        <div class="span8">
                            <h4><i class="icon-cogs"></i>Clases de Racks </h4>
                        </div>
                    </div>
                    <div class="portlet-body">
                        <div id="rolGrid">

                            <br />
                            <a href="@Url.Action("Nuevo")" class="btn btn-success">
                                <i class="glyphicon glyphicon-plus"></i>  Crear
                            </a>

                          @*   <a href="@Url.Action("ExportarReporteRackClase")" class="btn btn-success">
                                <i class="glyphicon glyphicon-download-alt"></i>  Exportar PDF
                            </a> *@

                            <table id="idClaseRack" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>Código</th>
                                        <th>Descripción</th>
                                        <th>Acción</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Id</td>
                                            <td>@item.Name</td>
                                            <td style="width:auto">
                                                <a href="@Url.Action("Actualizar", new { pIdClaseRack = item.Id })" class="btn btn-warning">Editar</a>
                                                <button class="btn btn-danger" onclick="Eliminar('@item.Id')">Eliminar</button>
                                                <a href="@Url.Action("ViewPartial_RackClase", new { pIdClaseRack = item.Id })" class="btn btn-info">Ver</a>
                                            </td>                                          
                                        </tr>
                                    }

                                </tbody>

                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

