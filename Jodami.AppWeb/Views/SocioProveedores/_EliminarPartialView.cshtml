@model Jodami.AppWeb.Models.ViewModels.VMSociosGrupos

<div class="modal fade" id="EliminarEntidad-@Model.IdSocio" aria-labelledby="EliminarEntidadLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">   
            <div class="modal-header">
                <h2 class="modal-title">Eliminar Grupo Económico</h2>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">x</span>
                </button>
            </div> 
            <div class="modal-body">                  
                <form asp-action="Eliminar" method="post"> 
                    <input type="hidden" asp-for="@Model.IdSocio" />
                    <div class="row">
                        <div class="col-sm-6 form-group">
                            <label class="control-label">Tipo documento de identidad</label>
                            <select disabled readonly="readonly" class="form-control" asp-for="@Model.IdTipoDcmtoIdentidad" asp-items="@(new SelectList(@Model.TiposDcmtoIdentidad, "IdTipoDcmtoIdentidad", "Simbolo") ) ">
                                <option value="">Seleccionar</option>
                            </select>                            
                        </div>
                        <div class="col-sm-6 form-group">
                            <label asp-for="@Model.NumeroDcmtoIdentidad" class="control-label">Número documento de identidad</label>
                            <input asp-for="@Model.NumeroDcmtoIdentidad" class="form-control" disabled readonly="readonly" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.RazonSocial" class="control-label">Grupo económico</label>
                        <input asp-for="@Model.RazonSocial" class="form-control" disabled readonly="readonly" />
                    </div>                                                
                    <div class="form-group">
                        <label asp-for="EsActivo" class="control-label">Estado</label>
                        @{
                            if (@Model.EsActivo)
                            {
                                <input class="form-control" value="Activo" readonly="readonly" />                                
                            }
                            else
                            {
                                <input class="form-control" value="Inactivo" readonly="readonly" />
                            }
                        }                     
                    </div>
                    <br /> 
                    <div class="modal-footer">                      
                        <button type="submit" class="btn btn-primary"> Eliminar</button>
                        <button class="btn btn-danger" data-dismiss="modal"> Cancelar</button>
                    </div>
                </form>                       
            </div>
        </div>
    </div>   
</div>  